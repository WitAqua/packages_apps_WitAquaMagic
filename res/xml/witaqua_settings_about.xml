<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/about_title">

    <!-- WitAqua logo -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="logo_witaqua"
        android:layout="@layout/logo_witaqua_layout"
        android:clickable="false"/>

    <!-- Info -->
    <com.android.settingslib.widget.TopIntroPreference
        android:title="@string/about_info" />

    <!-- Website -->
    <Preference
        android:title="@string/about_website_title"
        android:icon="@drawable/ic_about"
        android:summary="@string/about_website_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://witaqua.tokyo" />
    </Preference>

    <!-- Github -->
    <Preference
        android:title="@string/about_github_title"
        android:icon="@drawable/ic_github"
        android:summary="@string/about_github_summary">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/WitAqua" />
    </Preference>

    <PreferenceCategory
        android:key="contributors"
        android:title="@string/about_contributors_title" />

    <!-- Contributor 1 -->
        <Preference
            android:title="@string/about_contributor_1_title"
            android:summary="@string/about_contributor_1_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://x.com/toufu14271" />
        </Preference>

    <!-- Contributor 2 -->
        <Preference
            android:title="@string/about_contributor_2_title"
            android:summary="@string/about_contributor_2_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://bento.me/maitani-sakura" />
        </Preference>

    <!-- Contributor 3 -->
        <Preference
            android:title="@string/about_contributor_3_title"
            android:summary="@string/about_contributor_3_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/soralis0912" />
        </Preference>

    <!-- Contributor 4 -->
        <Preference
            android:title="@string/about_contributor_4_title"
            android:summary="@string/about_contributor_4_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://x.com/stkn2668" />
        </Preference>
</PreferenceScreen>
